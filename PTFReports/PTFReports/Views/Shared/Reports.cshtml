<!DOCTYPE html>
<html lang="en-US">
<head>
    <title>@ViewBag.Title</title>
    <meta name="X-FRAME-OPTIONS" content="DENY" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Css1", false)
    @RenderSection("Css2", false)
    @RenderSection("Css3", false)
    @RenderSection("Css4", false)
    <style type="text/css">
        h3
        {
            background-color: rgb(255, 128, 64);
            color: Black;
            text-align: left;
            font-family: Calibri;
            font-weight: normal;
            height: 25px;
        }
        li
        {
            text-align: left;
            font-family: Calibri;
            font-weight: normal;
        }
    </style>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"></script>
    @RenderSection("JavaScript1", false)
    @RenderSection("JavaScript2", false)
    @RenderSection("JavaScript3", false)
    @RenderSection("JavaScript4", false)
    @Html.Partial("LazyLoadingPartial")
</head>
<body>
    <div id="page" class="page">
        <div id="header" style="width: 30%">
            <div class="logo">
                <img data-original="@Url.Content("~/Content/images/Header.png")" src="@Url.Content("~/Content/images/1x1.jpg")" 
                    alt="logo" style="width: 945px; height: auto;" align="middle" class="lazy" />
            </div>
            <div id="title">
                <h1 class="title">
                </h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("LogOnUserControl")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    @RenderSection("Menu", true)
                </ul>
            </div>
        </div>
        <div id="main">
            <table width="100%">
                <tr>
                    <td style="width: 50%; vertical-align: top;">
                        <div class="container" style="width: 100%; height: 100%;">
                            @RenderSection("Navigation", true)
                        </div>
                    </td>
                    <td style="width: 50%; height: 450px;">
                        @RenderBody()
                    </td>
                </tr>
            </table>
        </div>
        @Html.Partial("FooterPartial")
    </div>
</body>
</html>
