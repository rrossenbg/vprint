@using System
@using MerchantSite
@using MerchantSite.Common
@if (HttpContext.Current.Items.Contains("CurrentUser"))
{
    <text> Hello, @Html.ActionLink(((CurrentUser)HttpContext.Current.Items["CurrentUser"]).UserName, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
    @Html.ActionLink("Log off", "LogOff", "Account")
    </text>
}
else
{
    <ul>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
