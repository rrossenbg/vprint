@using FintraxPTFImages
@using FintraxPTFImages.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - The Voucher Image Store</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style_declarations", required: false)
    <style type="text/css">
        nav ul ul{display:none;}
        nav ul li:hover > ul{display:block;}
        nav ul
        {
            background: #efefef;
            background: linear-gradient(top, #efefef 0%, #bbbbbb 100%);
            background: -moz-linear-gradient(top, #efefef 0%, #bbbbbb 100%);
            background: -webkit-linear-gradient(top, #efefef 0%, #bbbbbb 100%);
            box-shadow: 0 0 9 rgba(0,0,0,0.15);
            padding: 0 20px;
            border-radius: 10px;
            list-style: none;
            position: relative;
            display: inline-table;
        }
        nav ul:after{content: ""; clear:both; display:block;}
        nav ul li {float:left;}
        nav ul li:hover
        {
            background: #4b545f;
            background: linear-gradient(top, #4f5964 0%, #5f6975 40%);
            background: -moz-linear-gradient(top, #4f5964 0%, #5f6975 40%);
            background: -webkit-linear-gradient(top, #4f5964 0%, #5f6975 40%);
        }
        nav ul li:hover a{color:#fff;}
        nav ul li a{display:block; padding: 5px 40px; color:#757575; text-decoration:none;}
        nav ul ul{background:#5f6975; border-radius:0; padding:0;   position:absolute; top:100%;}
        nav ul ul li
        {
            float:none; border-top:1px solid #6b727c;
            border-bottom:1px solid #575f6a; position:relative;
        }
        nav ul ul li a{padding: 5px 40px; color: #fff;}
        nav ul ul li a:hover{background:#4b545f;}
        nav ul ul ul{position: absolute; left: 100%; top:0;}
    </style>
    @RenderSection("script_declarations", required: false)
</head>
<body>
    <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Premier Tax Free", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul> 
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            
                            <li><a href="#">Voucher</a>
                                <ul>
                                    <li>@Html.ActionLink("Search Voucher by HO", "Search", "Voucher")</li>
                                    <li>@Html.ActionLink("Search Voucher by ID", "SearchByNumber", "Voucher")</li>
                                    <li>@Html.ActionLink("Exclude from Debit Run", "Scanbarcode", "Voucher")</li>
                                </ul>
                            </li>
                            
                            <li>@Html.ActionLink("About", "About", "Home")
                                <ul>
                                    @if (HttpContext.Current.Items["CurrentUser"] != null && ((CurrentUser)HttpContext.Current.Items["CurrentUser"]).IsAdmin)
                                    {
                                        <li>@Html.ActionLink("Admin", "Home", "Admin")</li>
                                    }
                                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                </ul>
                            </li>
                        </ul>
                    </nav>                
                </div>
            </div>
        </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 2013 - PremierTaxFree Ltd. UK</p>
                </div>
            </div>
        </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
